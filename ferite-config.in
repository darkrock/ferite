#!/bin/sh

prefix=@prefix@
exec_prefix=@exec_prefix@
exec_prefix_set=no

usage="\
Usage: ferite-config [--prefix[=DIR]] [--exec-prefix[=DIR]] [--version] [--libs] [--cflags] [--library-path] [--module-library-path] [--native-library-path]"

if test $# -eq 0; then
      echo "${usage}" 1>&2
      exit 1
fi

while test $# -gt 0; do
  case "$1" in
  -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
  *) optarg= ;;
  esac

  case $1 in
    --prefix=*)
      prefix=$optarg
      if test $exec_prefix_set = no ; then
        exec_prefix=$optarg
      fi
      ;;
    --prefix)
      echo $prefix
      ;;
    --exec-prefix=*)
      exec_prefix=$optarg
      exec_prefix_set=yes
      ;;
    --exec-prefix)
      echo $exec_prefix
      ;;
    --version)
      echo @VERSION@
      ;;
    --cflags)
      if test @includedir@ != /usr/include ; then
        includes=-I@includedir@
      fi
      echo $includes @debugdefs@ @thread_defs@ @gc_defs@ @profile_defs@
      ;;
    --libs)
      libdirs=-L@libdir@
      echo $libdirs -lferite -lm @pcre_libs@ @thread_libs@ @gc_libs@ 
      ;;
    --library-path)
      echo @FE_LIBRARY_PATH@
      ;;
    --module-library-path)
      echo @FE_XPLAT_LIBRARY_PATH@
      ;;
    --native-library-path)
      echo @FE_NATIVE_LIBRARY_PATH@
      ;;
    *)
      echo "${usage}" 1>&2
      exit 1
      ;;
  esac
  shift
done

exit 0
